            document.querySelector('.buyNow').style.display = "none";
        }
        function newCartItems(cartItems, product) {
            let newCartItems = [];
            for (let i = 0; i < cartItems.length; i++) {
                if (cartItems[i].name !== product.name) {
                    newCartItems.push(cartItems[i]);
                }
            }
            // }console.log(newCartItems);
            return newCartItems;
        }

        let totalPrice = 0;
        cartItems = []
        // Retrieve cart items from local storage
        if (JSON.parse(localStorage.getItem("cartItems")).length !== 0) {
            cartItems = JSON.parse(localStorage.getItem("cartItems"));
            if (cartItems) {
                let productItems = document.querySelectorAll('.product-item');
                for (let i of cartItems) {
                    for (let j of productItems) {
                        if ((j.getAttribute('id')) === i.name) {
                            let price = j.querySelector('.price');
                            let discount = j.querySelector('.discount');
                            let discountPercentage = 0;
                            let discountAmount = 0;
                            let finalPrice = 0;
                            for (let k = 0; k < discount.textContent.length; k++) {
                                if (discount.textContent[k] === '%') {
                                    discountPercentage = parseInt(discount.textContent.slice(0, k));
                                    break;
                                }
                            }
                            let plusBtn = j.querySelector('.plus-btn');
                            let minusBtn = j.querySelector('.minus-btn');
                            check(plusBtn, minusBtn);

                            discountAmount = (parseInt(price.innerText.slice(2)) * discountPercentage) / 100;
                            totalPrice += (parseInt(price.innerText.slice(2)) - discountAmount) * parseInt(j.querySelector('span').textContent.slice(10));
                            break;
                        }
                    }
                }
            }
        } if (totalPrice !== 0) {
            let sec = document.querySelector('section');
            let buyNow = document.querySelector('.buyNow');
