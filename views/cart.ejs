        }

        .progress-circle {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border-radius: 50%;
            background-image: conic-gradient(#6b46c1 0%, #6b46c1 0%, #e2e8f0 0%);
            /* transform: rotate(-90deg); */
