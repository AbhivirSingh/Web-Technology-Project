        }

        .progress:hover .progress-circle {
            background-image: conic-gradient(#805ad5 0%, #805ad5 0%, #e2e8f0 0%);
        }

        .progress svg {
            width: 24px;
            height: 24px;
            fill: #fff;
            z-index: 1;
        }

