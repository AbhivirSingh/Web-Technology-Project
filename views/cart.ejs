                                            r.innerText = `Quantity: ${n.qty}`;
                                            break;
                                        }
                                    }
                                    localStorage.cartItems = JSON.stringify(cartItems);
                                }
                            });
                            plusbtn.addEventListener('click', () => {
                                cartItems = JSON.parse(localStorage.getItem("cartItems"))
                                for (let n of cartItems) {
                                    if (n.name === i.name) {
                                        n.qty += 1;
                                        r.innerText = `Quantity: ${n.qty}`;
